<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagep"
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:contentDescription="ddddd"
        app:srcCompat="@drawable/fond" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5146175048698339/2302538329" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="606dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5146175048698339/2302538329" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignBottom="@+id/imagep"
        android:layout_marginBottom="76dp"
        android:max="100"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_alignBottom="@+id/imagep"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bo4"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio4"
            android:text="Action 4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/bo5"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio5"
            android:text="Action 5"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/bo6"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio6"
            android:text="Action 6"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/salida"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="regresar"
            android:text="Close"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bo"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio1"
            android:text="Action 1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/bo2"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio2"
            android:text="Action 2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/bo3"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="Cambio3"
            android:text="Action 3"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="34dp" />
    </LinearLayout>
</RelativeLayout>